{
  "repository": "https://github.com/neon-bindings/website.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "website"
  ],
  "scripts": {
    "start": "yarn workspace website start",
    "build": "yarn workspace website build",
    "publish-gh-pages": "yarn workspace website publish-gh-pages",
    "lint": "eslint .",
    "lint-prose": "cp .proselintrc ~/ && proselint docs website/blog website/pages",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "test": "yarn lint",
    "version": "yarn workspace website version"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-bliss": "^3.1.1",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "yarn": "^1.12.3"
  },
  "engines": {
    "yarn": ">=1.10.1"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "bliss"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "import/no-dynamic-require": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "jsx-a11y/iframe-has-title": "off",
      "react/jsx-filename-extension": "off",
      "no-unused-vars": "off",
      "react/destructuring-assignment": "off",
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-no-target-blank": "off",
      "react/no-multi-comp": "off",
      "react/no-unescaped-entities": "off",
      "react/prefer-stateless-function": "off",
      "react/prop-types": "off"
    }
  },
  "version": "0.2.0"
}
